apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hello-dev
  template:
    metadata:
      labels:
        app: hello-dev
    spec:
      containers:
        - name: nginx
          image: nginx:1.25-alpine
          ports:
            - containerPort: 80
          readinessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 2
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: hello-dev
spec:
  selector:
    app: hello-dev
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP